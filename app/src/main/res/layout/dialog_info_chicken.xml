<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialog_info_chicken">

    <EditText
        android:id="@+id/chicken_dialog_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="소개글"
        android:textColor="#FF000000"
        android:textColorHint="#FF8C8C8C"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/chicken_dialog_fried"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="후라이드치킨 가격 [원 단위]"
        android:textColor="#FF000000"
        android:textColorHint="#FF8C8C8C"
        android:layout_below="@+id/chicken_dialog_text"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/chicken_dialog_spicy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="양념치킨 가격 [원 단위]"
        android:textColor="#FF000000"
        android:textColorHint="#FF8C8C8C"
        android:layout_below="@+id/chicken_dialog_fried"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/chicken_dialog_soya"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="간장치킨 가격 [원 단위]"
        android:textColor="#FF000000"
        android:textColorHint="#FF8C8C8C"
        android:layout_below="@+id/chicken_dialog_spicy"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/chicken_dialog_cola"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="콜라 종류 [펩시, 코카]"
        android:textColor="#FF000000"
        android:textColorHint="#FF8C8C8C"
        android:layout_below="@+id/chicken_dialog_soya"
        android:layout_marginRight="10dp"/>
        />

    <!--
    android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="12dp"
        android:paddingBottom="5dp"
        android:background="#FFFFFFFF"
        -->

</RelativeLayout>
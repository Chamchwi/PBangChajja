<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialog_info_pccafe">

    <EditText
        android:id="@+id/pccafe_dialog_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="소개글"
        android:textColor="#FF000000"
        android:textColorHint="#FF8C8C8C"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/pccafe_dialog_cpu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="CPU [모델명]"
        android:textColor="#FF000000"
        android:textColorHint="#FF8C8C8C"
        android:layout_below="@+id/pccafe_dialog_text"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/pccafe_dialog_ram"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="RAM [GB 단위]"
        android:textColor="#FF000000"
        android:textColorHint="#FF8C8C8C"
        android:layout_below="@+id/pccafe_dialog_cpu"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/pccafe_dialog_graphic_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Graphic card [모델명]"
        android:textColor="#FF000000"
        android:textColorHint="#FF8C8C8C"
        android:layout_below="@+id/pccafe_dialog_ram"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/pccafe_dialog_monitor_size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Monitor size [인치 단위]"
        android:textColor="#FF000000"
        android:textColorHint="#FF8C8C8C"
        android:layout_below="@+id/pccafe_dialog_graphic_card"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/pccafe_dialog_cost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="요금 [1시간 기준, 원]"
        android:textColor="#FF000000"
        android:textColorHint="#FF8C8C8C"
        android:layout_below="@+id/pccafe_dialog_monitor_size"
        android:layout_marginRight="10dp"
         />

    <!--
    android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="12dp"
        android:paddingBottom="5dp"
        android:background="#FFFFFFFF"
        -->

</RelativeLayout>
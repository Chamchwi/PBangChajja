<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/review_list_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user_id"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/review_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/review_list_userid"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/review_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/review_list_title"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/review_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20XX-XX-XX 00:00:00"
        android:textSize="13dp"
        android:layout_marginRight="20dp"
        android:layout_alignBaseline="@+id/review_list_userid"
        android:layout_alignParentRight="true"/>


</RelativeLayout>